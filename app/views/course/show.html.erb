<div class="container">
  <div class="row">
    <h1>Current Academic Course</h1>

    <% if @course_org %> <!-- a course is already set up -->
      <h2>Course: <a href="https://github.com/<%= @course_org.login %>"><%= @course_org.login %></a></h2>
      <!-- <p><%= @course_org.to_h %></p> -->

      <% if is_instructor? %>
        <p>Upload a new roster:</p>
        <%= form_tag course_change_roster_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag "Upload" %>
        <% end %>
        <p>Here is the current course roster:</p>
        <div class="col-sm-9">
          <table class="table">
            <thead>
              <tr>
                <th>Perm #</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>GitHub Username</th>
              </tr>
            </thead>
            <tbody>
              <% if @students.each do |student| %>
                <tr>
                  <td><%= student.perm %></td>
                  <td><%= student.first_name %></td>
                  <td><%= student.last_name %></td>
                  <td><%= student.email %></td>
                  <td><% if student.username %>
                    <a href="https://github.com/<%= student.username %>">
                      <%= student.username %>
                    </a>
                  <% else %>TBA<% end %></td>
                </tr>
              <% end.empty? %>
                <tr>
                  <td colspan="4">No students yet..</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% else %> <!-- no course has been set up yet -->
      <h2>Whoops!</h2>
      <p>Looks like no course has been set up yet. Would you like to set one up now?</p>
      <p><%= link_to "Set up a new course", course_setup_path %></p>
    <% end %>
  </div>
</div>
